@model Nop.Plugin.ExternalAuth.MailChimp.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
@inject Nop.Core.IWebHelper webHelper

<form asp-controller="MailChimpAuthentication" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>
                    To configure authentication with MailChimp follow these steps:<br />
                    <br />
                    1. Log into your MailChimp account (click <a href="https://login.mailchimp.com/signup/" target="_blank">here</a> to create a new one).<br />
                    2. Go to Profile -> Extras -> Registered apps.<br />
                    3. Register a new App.<br />
                    4. Enter "@($"{webHelper.GetStoreLocation()}signin-mailchimp")" into Redirect URI field.<br />
                    5. Copy your Client ID and Client secret below.<br />
                </p>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ClientId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ClientId" />
                        <span asp-validation-for="ClientId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ClientSecret" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ClientSecret" />
                        <span asp-validation-for="ClientSecret"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div> 
            </div>
        </div>
    </div>
</form>